@model IEnumerable<StajProject.Models.Candidates>

@{
    ViewBag.Title = "ViewCandidateList";
}

<h2>Candidate List</h2>

<p>
    @Html.ActionLink("Insert New Candidate", "AddCandidate")
</p>

@if (!Model.Any())
{
    <p>We don't have any candidates yet.</p>
}
else
{ 

<table class="table" id="Candidates">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCandidate", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "DeleteCandidate", new { id = item.ID })
                </td>
            </tr>

        }
    </tbody>
</table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#Candidates").DataTable();
            $("#Candidates .js-delete").on("click", function () {
                confirm("are you sure you want to delete this grade");
            });
        });
    </script>
}
