@model IEnumerable<StajProject.Models.Applications>

@{
    ViewBag.Title = "ViewApplicationList";
}

<h2>Applications</h2>

<p>
    @Html.ActionLink("Create New", "AddApplication") |
    @Html.ActionLink("Assign Manager", "AssignManager") |
    @Html.ActionLink("Assign Recruiter", "AssignRecruiter")

</p>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{
<table class="table" id="Applications">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidates.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidates.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grades.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Positions.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSent)
            </th>
            <th>  </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Candidates.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Candidates.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grades.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Positions.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSent)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditApplication", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "DeleteApplication", new { id = item.ID }, new { @class = "js-delete" }) |
                    @Html.ActionLink("Send Survey", "SendEmail", new { id = item.ID, email = item.Candidates.Email, FirstName=item.Candidates.FirstName , Surname= item.Candidates.Surname})
               </td>
            </tr>
        }
    </tbody>
</table>
}


@section scripts
{
    <script>
        $(document).ready(function () {
            $("#Applications").DataTable();

            $("#Applications .js-delete").on("click", function() {
                confirm("are you sure you want to delete this customer");
            });
        });
    </script>
}