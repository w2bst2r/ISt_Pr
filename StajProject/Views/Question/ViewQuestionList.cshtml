@model IEnumerable<StajProject.Models.Questions>

@{
    ViewBag.Title = "View Question List";
}
<br />
<h2>Question List</h2>
<br />
<p>
    @Html.ActionLink("Create New Question", "AddQuestion")
</p>
<br />
@if (!Model.Any())
{
    <p>We don't have any questions yet.</p>
}
else
{
<table class="table" id="Questions">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th></th>
    </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditQuestion", new { id = item.ID }, new { @class = "far fa-edit", style = "color:#0a69e3" }) 
                    @Html.ActionLink("Delete", "DeleteQuestion", new { id = item.ID },new { @class = "js-delete fas fa-trash-alt", style = "color:#dd7676" })
                </td>
            </tr>
        }
    </tbody>
</table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#Questions").DataTable();
            $("#Questions .js-delete").on("click", function (e) {
                if (confirm("are you sure you want to delete this question") == false) {
                    e.preventDefault();
                }
            });
        });
    </script>
}