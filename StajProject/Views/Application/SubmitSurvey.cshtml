                <li>
                    <input type="radio" name="Answer1" id="CandidateAnswer1" value="Excellent" checked="checked">
                    <label for="CandidateAnswer1">Excellent</label>
                    <div class="check w3ls"></div>
                </li>
                <li>
                    <input type="radio" name="Answer1" id="CandidateAnswer2" value="Good">
