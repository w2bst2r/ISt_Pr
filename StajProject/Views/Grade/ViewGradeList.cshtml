@model IEnumerable<StajProject.Models.Grades>

@{
    ViewBag.Title = "View Grade List";
}
<br />
<h2>Grade List</h2>
<br />
<p>
    @Html.ActionLink("Create New Grade", "AddGrade")
</p>
<br />
@if (!Model.Any())
{
    <p>We don't have any grade yet.</p>
}
else
{

<table class="table" id="Grades">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditGrade", new { id = item.ID }, new { @class = "far fa-edit", style = "color:#0a69e3" }) 
                    @Html.ActionLink("Delete", "DeleteGrade", new { id = item.ID }, new { @class = "js-delete fas fa-trash-alt", style = "color:#dd7676" })
                </td>
            </tr>
        }
    </tbody>
</table>
}

@section scripts
{
<script>
        $(document).ready(function () {
            $("#Grades").DataTable();
            $("#Grades .js-delete").on("click", function (e) {
                if (confirm("are you sure you want to delete this grade") == false) {
                    e.preventDefault();
                }
            });
        });
</script>
}


